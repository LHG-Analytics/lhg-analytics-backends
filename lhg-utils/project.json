{
  "name": "@lhg/utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "lhg-utils/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run build",
        "cwd": "lhg-utils"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run watch",
        "cwd": "lhg-utils"
      }
    }
  },
  "tags": ["lib", "utils"]
}
