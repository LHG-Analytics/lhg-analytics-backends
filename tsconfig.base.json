// tsconfig.base.json (RAIZ DO PROJETO)
{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2021",
        "strict": true,
        "sourceMap": true,
        "declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    }
}