{
    "name": "lhg-analytics-backends",
    "version": "1.0.0",
    "description": "Backend services for LHG Analytics",
    "scripts": {
        "install": "cd lush_ipiranga && npm install --legacy-peer-deps && cd ../lush_lapa && npm install --legacy-peer-deps",
        "start": "pm2-runtime ecosystem.config.js",
        "build": "npm run build:ipiranga && npm run build:lapa",
        "build:ipiranga": "cd lush_ipiranga && npm run build",
        "build:lapa": "cd lush_lapa && npm run build"
    },
    "dependencies": {
        "dotenv": "^16.0.0",
        "express": "^4.21.2",
        "http-proxy-middleware": "^3.0.3",
        "pm2": "^5.4.3"
    }
}
