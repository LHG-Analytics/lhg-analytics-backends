{
    "name": "lhg-analytics-backends",
    "version": "1.0.0",
    "description": "Backend services for LHG Analytics",
    "scripts": {
        "preinstall": "npm install -g pm2",
        "install": "cd lush_ipiranga && npm install --legacy-peer-deps && cd ../lush_lapa && npm install --legacy-peer-deps && cd ../tout && npm install --legacy-peer-deps && cd ../andar_de_cima && npm install --legacy-peer-deps && cd .. && npm install --legacy-peer-deps",
        "start:prod": "pm2-runtime ecosystem.config.js",
        "start:auth": "cd src/auth && npm run start:dev",
        "start:dev": "nest start --watch",
        "build": "npm run build:ipiranga && npm run build:lapa && npm run build:tout && npm run build:andar_de_cima && npm run build:auth",
        "build:auth": "cd .. && npm run generate && nest build",
        "generate": "npx prisma generate --schema=./src/prisma/schemas/schema.online.prisma",
        "build:ipiranga": "cd lush_ipiranga && npm run build",
        "build:lapa": "cd lush_lapa && npm run build",
        "build:tout": "cd tout && npm run build",
        "build:andar_de_cima": "cd andar_de_cima && npm run build"
    },
    "dependencies": {
        "@nestjs/class-validator": "^0.13.1",
        "@nestjs/config": "^4.0.2",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/mapped-types": "*",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.1.0",
        "@nestjs/swagger": "^11.1.5",
        "@prisma/client": "^6.6.0",
        "@types/bcrypt": "^5.0.2",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "dotenv": "^16.5.0",
        "express": "^4.21.2",
        "http-proxy-middleware": "^3.0.3",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pm2": "^5.4.3",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@types/passport-jwt": "^4.0.1",
        "prisma": "^6.6.0"
    }
}