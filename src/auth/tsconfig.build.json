{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/auth",
        "rootDir": "../../src",
        "baseUrl": "../../src",
        "incremental": true,
        "paths": {
            "@nestjs/*": [
                "../../node_modules/@nestjs/*"
            ]
        }
    },
    "include": [
        "auth/**/*.ts"
