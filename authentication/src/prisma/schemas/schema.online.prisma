// Configura o banco de dados do Supabase como fonte de dados
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql" // O Supabase usa PostgreSQL
    url      = env("SUPABASE_URL_USERS") // Vari√°vel de ambiente configurada no seu .env
}

model User {
    id            Int            @id @default(autoincrement())
    email         String         @unique
    password      String
    name          String?
    cpf           String         @unique
    role          UserRole
    unit          UserUnit
    createdAt     DateTime       @default(now())
    updatedAt     DateTime       @updatedAt
    refreshTokens RefreshToken[]
}

model RefreshToken {
    id        String   @id @default(uuid())
    token     String   @unique
    userId    Int
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    expiresAt DateTime
    createdAt DateTime @default(now())
    revoked   Boolean  @default(false)

    @@index([userId])
    @@index([token])
}

enum UserRole {
    ADMIN
    GERENTE_GERAL
    GERENTE_FINANCEIRO
    GERENTE_RESERVAS
    GERENTE_RESTAURANTE
    GERENTE_OPERACIONAL
}

enum UserUnit {
    LUSH_LAPA
    LUSH_IPIRANGA
    TOUT
    ANDAR_DE_CIMA
    LHG
}
