{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDirs": ["src", "../authentication/src"],
    "typeRoots": ["node_modules/@types", "../node_modules/@types"],
    "paths": {
      "@client-online": ["dist/generated/client-online"],
      "@client-local": ["dist/generated/client-local"],
      "@auth/*": ["../authentication/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
